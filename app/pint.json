{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "blank_line_before_statement": {
            "statements": ["return", "throw", "try"]
        },
        "no_unused_imports": true,
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "single_quote": true,
        "trailing_comma_in_multiline": true,
        "array_syntax": {
            "syntax": "short"
        },
        "class_attributes_separation": {
            "elements": {
                "method": "one",
                "property": "one"
            }
        }
    },
    "exclude": [
        "bootstrap",
        "storage",
        "vendor",
        "node_modules"
    ]
}
