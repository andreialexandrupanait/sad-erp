{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "Alpine": "readonly",
        "axios": "readonly",
        "showToast": "readonly",
        "Livewire": "readonly"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": ["warn", { "allow": ["error", "warn"] }],
        "semi": ["error", "always"],
        "quotes": ["error", "single", { "avoidEscape": true }]
    }
}
