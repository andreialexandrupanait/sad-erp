# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="ERP System"
APP_ENV=local
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=Europe/Bucharest

APP_LOCALE=ro
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ro_RO

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Audit logging (enabled in production)
# AUDIT_LOG_ENABLED=true

# ============================================
# DATABASE
# ============================================
DB_CONNECTION=mysql
DB_HOST=erp_db
DB_PORT=3306
DB_DATABASE=laravel_erp
DB_USERNAME=laravel_user
DB_PASSWORD=your_secure_database_password_here

# ============================================
# SESSION & SECURITY
# ============================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================
# QUEUE & CACHE
# ============================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=erp_cache

# ============================================
# REDIS (recommended for production)
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=erp_redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# MAIL CONFIGURATION
# ============================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS (optional - for S3 storage)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# FRONTEND ASSETS
# ============================================
VITE_APP_NAME="${APP_NAME}"

# ============================================
# NOTIFICATION SYSTEM
# ============================================

# Enable/disable notification system globally
NOTIFICATIONS_ENABLED=true

# Slack Integration
SLACK_NOTIFICATIONS_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_USERNAME="ERP Notifications"
SLACK_ICON_EMOJI=":bell:"

# WhatsApp Integration (Future)
WHATSAPP_NOTIFICATIONS_ENABLED=false
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=

# Notification Queue Settings
NOTIFICATION_QUEUE_CONNECTION=database
NOTIFICATION_QUEUE=notifications
NOTIFICATION_RETRY_TIMES=3
NOTIFICATION_RETRY_DELAY=300

# System Error Notifications
NOTIFY_ON_EXCEPTIONS=true
EXCEPTION_NOTIFICATION_THRESHOLD=error

# Domain Expiry Settings
DOMAIN_EXPIRY_WARNING_DAYS=30

# ============================================
# SMARTBILL INTEGRATION (optional)
# ============================================
SMARTBILL_API_URL=https://ws.smartbill.ro/SBORO/api
SMARTBILL_USERNAME=
SMARTBILL_TOKEN=
SMARTBILL_COMPANY_VAT_CODE=

# ============================================
# CLICKUP INTEGRATION (optional)
# ============================================
CLICKUP_API_URL=https://api.clickup.com/api/v2
CLICKUP_API_TOKEN=
CLICKUP_TEAM_ID=

# ============================================
# BANCA TRANSILVANIA INTEGRATION (PSD2/Open Banking)
# ============================================
# Use sandbox mode for testing (set to false for production)
BT_SANDBOX_MODE=true

# OAuth2 Client Credentials (obtain from BT Developer Portal)
BT_CLIENT_ID=
BT_CLIENT_SECRET=

# API URLs (defaults are correct, override only if needed)
BT_SANDBOX_URL=https://api-sandbox.bancatransilvania.ro
BT_PRODUCTION_URL=https://api.bancatransilvania.ro

# OAuth2 Redirect URI (must match the one registered with BT)
BT_REDIRECT_URI="${APP_URL}/settings/banking/bt/callback"

# Webhook Secret (for webhook signature verification, if supported)
BT_WEBHOOK_SECRET=

# Sync Settings
BANKING_SYNC_FREQUENCY=12
BANKING_HISTORICAL_START_DATE=2019-10-01

# Feature Flags
BANKING_ENABLE_TRANSACTION_SYNC=true
BANKING_ENABLE_STATEMENT_DOWNLOAD=true
BANKING_ENABLE_AUTO_MATCHING=true
BANKING_ENABLE_MANUAL_MATCHING=true
BANKING_ENABLE_WEBHOOK_RECEIVER=false

# Logging
BANKING_LOG_CHANNEL=stack
BANKING_LOG_LEVEL=info
BANKING_LOG_API_REQUESTS=false

# ============================================
# PRODUCTION RECOMMENDATIONS
# ============================================
# For production deployments, ensure:
# - APP_ENV=production
# - APP_DEBUG=false
# - CACHE_STORE=redis (or memcached)
# - QUEUE_CONNECTION=redis
# - SESSION_DRIVER=redis (or database)
# - Proper MAIL_* configuration
# - Strong DB_PASSWORD
# - HTTPS configured (APP_URL with https://)
