#-----------------------------------------------------------------------
# Application Configuration
#-----------------------------------------------------------------------
APP_NAME="ERP Application"
APP_ENV=local
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

# Timezone (default: UTC)
APP_TIMEZONE=UTC

# Locale settings
APP_LOCALE=ro
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance mode driver: file, cache
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

#-----------------------------------------------------------------------
# Security Settings
#-----------------------------------------------------------------------
# Content Security Policy enforcement
# Set to true in production to enforce CSP (recommended)
# Set to false for report-only mode during migration
CSP_ENFORCE=true

# Session secure cookie - MUST be true in production with HTTPS
SESSION_SECURE_COOKIE=true

#-----------------------------------------------------------------------
# Database Configuration
#-----------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=erp
DB_USERNAME=root
DB_PASSWORD=

# Optional: Use a URL instead of individual settings
# DB_URL=mysql://user:password@host:port/database

# SQLite configuration (for local development/testing)
# DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

#-----------------------------------------------------------------------
# Redis Configuration
#-----------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Optional Redis settings
# REDIS_URL=
# REDIS_USERNAME=
# REDIS_CLUSTER=redis
# REDIS_PERSISTENT=false
# REDIS_MAX_RETRIES=3

#-----------------------------------------------------------------------
# Cache Configuration
#-----------------------------------------------------------------------
# Supported: array, database, file, memcached, redis, dynamodb, octane, null
CACHE_STORE=database

# Cache prefix (auto-generated from APP_NAME if not set)
# CACHE_PREFIX=

#-----------------------------------------------------------------------
# Session Configuration
#-----------------------------------------------------------------------
# Supported: file, cookie, database, memcached, redis, dynamodb, array
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true

# Session cookie settings
# SESSION_COOKIE=
# SESSION_DOMAIN=
# SESSION_PATH=/
# SESSION_HTTP_ONLY=true
# SESSION_SAME_SITE=lax
# SESSION_EXPIRE_ON_CLOSE=false

#-----------------------------------------------------------------------
# Queue Configuration
#-----------------------------------------------------------------------
# Supported: sync, database, beanstalkd, sqs, redis, deferred, background, null
QUEUE_CONNECTION=database

# Failed job driver: database-uuids, dynamodb, file, null
QUEUE_FAILED_DRIVER=database-uuids

# Database queue settings
# DB_QUEUE_CONNECTION=
# DB_QUEUE_TABLE=jobs
# DB_QUEUE=default
# DB_QUEUE_RETRY_AFTER=90

#-----------------------------------------------------------------------
# Mail Configuration
#-----------------------------------------------------------------------
# Supported: smtp, sendmail, mailgun, ses, postmark, resend, log, array
MAIL_MAILER=log

# SMTP settings (for MAIL_MAILER=smtp)
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# From address for outgoing emails
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

#-----------------------------------------------------------------------
# Broadcasting / WebSockets (Reverb)
#-----------------------------------------------------------------------
BROADCAST_CONNECTION=null

# Reverb WebSocket server configuration
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Reverb server settings
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# WebSocket URL for CSP (Content Security Policy connect-src)
# Used for real-time features - set to your production WebSocket endpoint
REVERB_WSS_URL=wss://your-domain.com:6001

#-----------------------------------------------------------------------
# Logging Configuration
#-----------------------------------------------------------------------
# Supported: single, daily, slack, syslog, errorlog, stack, null
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_STACK=single

# Daily log settings
LOG_DAILY_DAYS=14

# JSON formatted logs (recommended for production)
LOG_JSON_FORMAT=true

# Deprecations logging
LOG_DEPRECATIONS_CHANNEL=null
LOG_DEPRECATIONS_TRACE=false

#-----------------------------------------------------------------------
# Filesystem Configuration
#-----------------------------------------------------------------------
FILESYSTEM_DISK=local

# AWS S3 configuration (if using S3 driver)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

#-----------------------------------------------------------------------
# Vite Configuration
#-----------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

#-----------------------------------------------------------------------
# Web Push Notifications (VAPID Keys)
#-----------------------------------------------------------------------
# Generate with: php artisan webpush:vapid
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

#-----------------------------------------------------------------------
# External API Keys
#-----------------------------------------------------------------------
# OpenAPI.ro integration
OPENAPI_KEY=

#-----------------------------------------------------------------------
# SmartBill Integration
#-----------------------------------------------------------------------
# SmartBill API credentials (get from https://cloud.smartbill.ro/core/integrari/)
SMARTBILL_USERNAME=
SMARTBILL_TOKEN=
SMARTBILL_VAT_CODE=

# SmartBill invoice series (configure at https://cloud.smartbill.ro/core/configurare/serii/)
SMARTBILL_INVOICE_SERIES=
SMARTBILL_PROFORMA_SERIES=
SMARTBILL_RECEIPT_SERIES=

# SmartBill API URL (only change if SmartBill changes their endpoint)
# SMARTBILL_BASE_URL=https://ws.smartbill.ro:8183/SBORO/api

#-----------------------------------------------------------------------
# Error Monitoring (Sentry)
#-----------------------------------------------------------------------
# Get your DSN from https://sentry.io/
SENTRY_LARAVEL_DSN=

# Performance monitoring sample rate (0.0 to 1.0)
# 1.0 = 100% of transactions, 0.1 = 10% (recommended for production)
SENTRY_TRACES_SAMPLE_RATE=0.1

# Profiling sample rate (relative to traces)
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Environment name for Sentry (defaults to APP_ENV)
# SENTRY_ENVIRONMENT=production

# Release version (defaults to app.version)
# SENTRY_RELEASE=1.0.0

# Send user information to Sentry (email, id) - disable for privacy
SENTRY_SEND_DEFAULT_PII=false

#-----------------------------------------------------------------------
# Development Tools
#-----------------------------------------------------------------------
# Telescope (debugging)
TELESCOPE_ENABLED=false

# Debugbar
DEBUGBAR_ENABLED=false
