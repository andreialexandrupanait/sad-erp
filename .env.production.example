# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# This file contains production-ready environment variable configurations
# Copy this to .env and fill in your production values
# NEVER commit .env to version control
# ============================================================================

# ----------------------------------------------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------------------------------------------
APP_NAME="ERP Application"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Generate a new key with: php artisan key:generate
APP_KEY=base64:YOUR_PRODUCTION_APP_KEY_HERE

# Timezone
APP_TIMEZONE=Europe/Bucharest

# Locale
APP_LOCALE=ro
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ro_RO

# ----------------------------------------------------------------------------
# SECURITY SETTINGS
# ----------------------------------------------------------------------------
# Content Security Policy Enforcement
# Set to true to enforce CSP (block violations)
# Set to false for report-only mode (log violations)
CSP_ENFORCE=false

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=erp_db
DB_PORT=3306
DB_DATABASE=laravel_erp
DB_USERNAME=laravel_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE
DB_ROOT_PASSWORD=YOUR_SECURE_ROOT_PASSWORD_HERE

# ----------------------------------------------------------------------------
# CACHE & SESSION CONFIGURATION
# ----------------------------------------------------------------------------
# Use Redis for production performance
CACHE_STORE=redis
CACHE_PREFIX=erp_cache

# Redis Configuration
REDIS_HOST=erp_redis
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ----------------------------------------------------------------------------
# QUEUE CONFIGURATION
# ----------------------------------------------------------------------------
QUEUE_CONNECTION=redis

# ----------------------------------------------------------------------------
# MAIL CONFIGURATION
# ----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=YOUR_MAIL_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# ----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# ----------------------------------------------------------------------------
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Log to separate files for better organization
LOG_DAILY_DAYS=14

# ----------------------------------------------------------------------------
# BROADCASTING CONFIGURATION
# ----------------------------------------------------------------------------
BROADCAST_CONNECTION=null

# ----------------------------------------------------------------------------
# FILESYSTEM CONFIGURATION
# ----------------------------------------------------------------------------
FILESYSTEM_DISK=local

# Optional: AWS S3 for file storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=eu-central-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ----------------------------------------------------------------------------
# ERROR MONITORING (Sentry)
# ----------------------------------------------------------------------------
# Uncomment and configure for error tracking
# SENTRY_LARAVEL_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_TRACES_SAMPLE_RATE=0.2

# ----------------------------------------------------------------------------
# PERFORMANCE MONITORING
# ----------------------------------------------------------------------------
# Laravel Telescope (disable in production, only enable for debugging)
TELESCOPE_ENABLED=false

# Laravel Pulse (lightweight performance monitoring)
PULSE_ENABLED=true

# ----------------------------------------------------------------------------
# BACKUP CONFIGURATION
# ----------------------------------------------------------------------------
BACKUP_SCHEDULE_ENABLED=true
BACKUP_RETENTION_DAYS=30

# ----------------------------------------------------------------------------
# NOTIFICATION CHANNELS
# ----------------------------------------------------------------------------
# Slack Webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# WhatsApp Business API (if using)
# WHATSAPP_API_URL=
# WHATSAPP_API_TOKEN=

# ----------------------------------------------------------------------------
# THIRD-PARTY INTEGRATIONS
# ----------------------------------------------------------------------------
# SmartBill Integration
SMARTBILL_USERNAME=
SMARTBILL_TOKEN=
SMARTBILL_VAT_CODE=

# ----------------------------------------------------------------------------
# MAINTENANCE MODE
# ----------------------------------------------------------------------------
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# ----------------------------------------------------------------------------
# OPTIMIZATION SETTINGS
# ----------------------------------------------------------------------------
# These should be cached in production:
# php artisan config:cache
# php artisan route:cache
# php artisan view:cache

# ----------------------------------------------------------------------------
# TRUSTED PROXIES
# ----------------------------------------------------------------------------
# If behind load balancer/reverse proxy, configure trusted proxies
# TRUSTED_PROXIES=*

# ----------------------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------------------
# Adjust based on your traffic patterns
THROTTLE_LOGIN_ATTEMPTS=5
THROTTLE_LOGIN_DECAY_MINUTES=1

# ----------------------------------------------------------------------------
# ORGANIZATION & MULTI-TENANCY
# ----------------------------------------------------------------------------
# Default organization ID for setup
DEFAULT_ORGANIZATION_ID=1

# ============================================================================
# PRODUCTION CHECKLIST
# ============================================================================
# Before deploying to production, ensure:
# - [ ] APP_ENV=production
# - [ ] APP_DEBUG=false
# - [ ] APP_KEY is generated and unique
# - [ ] All passwords are strong and unique
# - [ ] HTTPS is enabled (APP_URL uses https://)
# - [ ] SESSION_SECURE_COOKIE=true
# - [ ] Database credentials are secure
# - [ ] Redis password is set
# - [ ] Mail configuration is tested
# - [ ] Error monitoring (Sentry) is configured
# - [ ] Backups are scheduled and tested
# - [ ] Slow query logging is enabled
# - [ ] CSP enforcement plan is in place
# - [ ] Run: php artisan config:cache
# - [ ] Run: php artisan route:cache
# - [ ] Run: php artisan view:cache
# - [ ] Run: composer install --optimize-autoloader --no-dev
# ============================================================================
